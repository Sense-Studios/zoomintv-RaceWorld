<?xml version='1.0' encoding='utf-8'?>
<widget
  id="com.sensestudios.zoomintv.raceworld"
  version="1.0.1"
  versioncode="1"
  xmlns="http://www.w3.org/ns/widgets"
  xmlns:gap="http://phonegap.com/ns/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:cdv="http://cordova.apache.org/ns/1.0"
>

    <name>RaceWorld</name>
    <description>ZoominTV RaceWorld Channel</description>
    <author email="info@zoomin.tv" href="http://zoomin.tv">ZoominTV</author>

    <content src="http://zoomintvraceworld.zoomin.tv/" />
    <!-- <content src="http://develop.sense-studios.com:32000" /> -->
    <!-- <content src="http://zoomintvgames-staging.herokuapp.com" /> -->
    <access origin="*" />

    <!-- platforms -->
    <gap:platform name="ios" />
    <gap:platform name="android" />

    <!-- plugins -->
  	<gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
  	<gap:plugin name="nl.x-services.plugins.socialsharing" version="4.3.8" />
  	<gap:plugin name="org.apache.cordova.splashscreen" version="0.3.4" />

    <!-- ios specific -->
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="StatusBarOverlaysWebview" value="false" />
    <preference name="target-device" value="universal" /> <!-- ios phone and tablet -->
    <gap:config-file platform="ios" parent="UIStatusBarHidden">
      <true/>
    </gap:config-file>
    <gap:config-file platform="ios" parent="AllowInlineMediaPlayback">
      <true/>
    </gap:config-file>
    <gap:config-file platform="ios" parent="MediaPlaybackRequiresUserAction">
      <false/>
    </gap:config-file>
    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
      <false/>
    </gap:config-file>

    <!-- android specific -->
    <preference name="fullscreen" value="true" />
    <preference name="permissions" value="none"/>

    <!-- both -->
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="keepRunning" value="true" />

    <!-- icon -->
    <icon src="icon.png"/>
    <gap:icon src="icon.png" />

    <!-- icon android -->
    <icon gap:platform="android" src='res/android/icon/ldpi.png'                gap:qualifier='ldpi' />
    <icon gap:platform="android" src='res/android/icon/mdpi.png'                gap:qualifier='mdpi' />
    <icon gap:platform="android" src='res/android/icon/hdpi.png'                gap:qualifier='hdpi' />
    <icon gap:platform="android" src='res/android/icon/xhdpi.png'               gap:qualifier='xhdpi' />

    <!-- icon ios -->
      <!-- iOS 7.0+ -->
      <!-- iPhone / iPod Touch  -->
    <icon gap:platform="ios" src="res/ios/icons/Icon-60@2x.png" width="120" height="120" />
      <!-- iPad -->
    <icon gap:platform="ios" src="res/ios/icons/Icon-76.png" width="76" height="76" />
    <icon gap:platform="ios" src="res/ios/icons/Icon-76@2x.png" width="152" height="152" />
      <!-- iOS 6.1 -->
      <!-- Spotlight Icon -->
    <icon gap:platform="ios" src="res/ios/icons/Icon-Small-40.png" width="40" height="40" />
    <icon gap:platform="ios" src="res/ios/icons/Icon-Small-40@2x.png" width="80" height="80" />
      <!-- iPhone / iPod Touch -->
    <icon gap:platform="ios" src="res/ios/icons/Icon.png" width="57" height="57" />
    <icon gap:platform="ios" src="res/ios/icons/Icon@2x.png" width="114" height="114" />
      <!-- iPad -->
    <icon gap:platform="ios" src="res/ios/icons/Icon-72.png" width="72" height="72" />
    <icon gap:platform="ios" src="res/ios/icons/Icon-72@2x.png" width="144" height="144" />
      <!-- iPhone Spotlight and Settings Ico/iconn -->
    <icon gap:platform="ios" src="res/ios/icons/Icon-Small.png" width="29" height="29" />
    <icon gap:platform="ios" src="res/ios/icons/Icon-Small@2x.png" width="58" height="58" />
      <!-- iPad Spotlight and Settings Icon /icon-->
    <icon gap:platform="ios" src="res/ios/icons/Icon-Small-50.png" width="50" height="50" />
    <icon gap:platform="ios" src="res/ios/icons/Icon-Small-50@2x.png" width="100" height="100" />

    <!-- splash -->
    <gap:splash src="splash.png" width="640" height="1136" />

    <!-- splash android -->
    <gap:splash src="res/android/screens/ldpi.png"              gap:platform="android" gap:qualifier="ldpi" />
    <gap:splash src="res/android/screens/mdpi.png"              gap:platform="android" gap:qualifier="mdpi" />
    <gap:splash src="res/android/screens/hdpi.png"              gap:platform="android" gap:qualifier="hdpi" />
    <gap:splash src="res/android/screens/xhdpi.png"             gap:platform="android" gap:qualifier="xhdpi" />
    <gap:splash src="res/android/screens/portrait-xxhdpi.png"   gap:platform="android" gap:qualifier="port-xxhdpi" />
    <gap:splash src="res/android/screens/landscape-xxhdpi.png"  gap:platform="android" gap:qualifier="land-xxhdpi" />


    <!-- iPhone and iPod touch -->
    <gap:splash src="res/ios/screens/Default.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="res/ios/screens/Default@2x.png" gap:platform="ios" width="640" height="960" />

    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <gap:splash src="res/ios/screens/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />

    <!-- iPhone 6 -->
    <gap:splash src="res/ios/screens/Default-667h@2x.png" gap:platform="ios" width="750" height="1334" />
    <gap:splash src="res/ios/screens/Default-Portrait-736h@3x.png" gap:platform="ios" width="1242" height="2208" />
    <gap:splash src="res/ios/screens/Default-Landscape-736h@3x.png" gap:platform="ios" width="2208" height="1242" />

    <!-- iPad -->
    <gap:splash src="res/ios/screens/Default-Portrait.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="res/ios/screens/Default-Landscape.png" gap:platform="ios" width="1024" height="768" />
    <!-- Retina iPad -->
    <gap:splash src="res/ios/screens/Default-Portrait@2x.png" gap:platform="ios" width="1536" height="2048" />
    <gap:splash src="res/ios/screens/Default-Landscape@2x.png" gap:platform="ios" width="2048" height="1536" />



</widget>
